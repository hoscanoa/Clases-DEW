@model IEnumerable<PREGUNTA1.Models.clientes>
@{
    ViewBag.Title = "Index";
    WebGrid wg = new WebGrid(Model);
}

<h2>BUSCAR CLIENTES</h2>
@using(@Html.BeginForm("IndexBuscar","Cliente",FormMethod.Get))
{
    <fieldset>
        <legend>Buscar Cliente</legend>
        @Html.Label("lblCliente", "Cliente:")
        @Html.TextBox("cliente")

        <br/>
        @Html.Label("lblPais", "Pais:")
        @Html.TextBox("pais")
        <input type="submit" value="Buscar" />
    </fieldset>
}

@wg.GetHtml(
columns:new[]{
    wg.Column("IdCliente",header:"CODIGO",canSort:false),
    wg.Column("NomCliente",header:"RAZON SOCIAL"),
    wg.Column("DirCliente",header:"DIRECCION"),
    wg.Column("paises.NombrePais",header:"PAIS",canSort:false),
    wg.Column("",header:"ACCIONES",format:@<text>@Html.ActionLink("Editar","","")@Html.ActionLink("Eliminar","","")</text>)
}
)
